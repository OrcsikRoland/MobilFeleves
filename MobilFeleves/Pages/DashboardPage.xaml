<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobilFeleves.Pages.DashboardPage"
             Title="HikeMate">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Label Text="Túrák összefoglaló" Style="{StaticResource Headline}" />
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" Padding="0,8">
                <Frame BackgroundColor="{DynamicResource SecondaryColor}" CornerRadius="12" Padding="16" Grid.Column="0">
                    <VerticalStackLayout>
                        <Label Text="Összes túra" FontSize="18" />
                        <Label Text="{Binding TripCount}" FontSize="32" FontAttributes="Bold" />
                    </VerticalStackLayout>
                </Frame>
                <Frame BackgroundColor="{DynamicResource PrimaryColor}" CornerRadius="12" Padding="16" Grid.Column="1">
                    <VerticalStackLayout>
                        <Label Text="Összes táv" FontSize="18" TextColor="White" />
                        <Label Text="{Binding TotalDistance, StringFormat='{0:F1} km'}" FontSize="32" FontAttributes="Bold" TextColor="White" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <Button Text="Új túra hozzáadása" Command="{Binding AddTripCommand}" />
            <Button Text="Túralista megnyitása" Command="{Binding NavigateToListCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
